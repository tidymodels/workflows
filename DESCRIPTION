Package: workflows
Title: Modeling Workflows
Version: 1.2.0.9000
Authors@R: c(
    person("Davis", "Vaughan", , "davis@posit.co", role = "aut"),
    person("Simon", "Couch", , "simon.couch@posit.co", role = c("aut", "cre"),
