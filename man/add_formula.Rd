un_encoded <- lm_wflow |> 
  add_formula(
    body_mass_g ~ species + island + bill_depth_mm, 
    blueprint = minimal
  ) |> 
  fit(data = penguins)

un_encoded_parsnip_fit <- un_encoded |> 
  extract_fit_parsnip()

un_encoded_fit <- un_encoded_parsnip_fit$fit

un_encoded_fit
